// The module 'vscode' contains the VS Code extensibility API
// Import the module and reference it with the alias vscode in your code below
import * as vscode from 'vscode';
import * as path from 'path';
import * as swaggerParser from '@apidevtools/swagger-parser';
import { Repository } from './Repo';

// this method is called when your extension is activated
// your extension is activated the very first time the command is executed
export function activate(context: vscode.ExtensionContext) {

	// Use the console to output diagnostic information (console.log) and errors (console.error)
	// This line of code will only be executed once when your extension is activated
	console.log('Congratulations, your extension "vscode-swagger-diff" is now active!');

	// The command has been defined in the package.json file
	// Now provide the implementation of the command with registerCommand
	// The commandId parameter must match the command field in package.json
	let disposable = vscode.commands.registerCommand('vscode-swagger-diff.generateDiff', () => {
		// The code you place here will be executed every time your command is executed

		if(vscode.window.activeTextEditor){
			var currentlyOpenTabfileUri = vscode.window.activeTextEditor?.document.uri;
			var currentlyOpenTabfilePath = vscode.window.activeTextEditor?.document.fileName;
			if(currentlyOpenTabfilePath){
				var currentlyOpenTabfileName = path.basename(currentlyOpenTabfilePath);
				// console.log(currentlyOpenTabfileName);
			}

			swaggerParser.validate(currentlyOpenTabfilePath, (err, api) => {
				if (err) {
				  	console.error(err);
					var errMessage = "swagger-diff: the selected swagger is not valid!";
					vscode.window.showErrorMessage(errMessage);
				}
				else {
				
					console.log("API name: %s", currentlyOpenTabfileName);
					console.log(currentlyOpenTabfileUri.path);
					console.log("After Diff");

					console.log("before orig path");
					var SC = vscode.scm.createSourceControl("Swagger Diff", "Swagger Diff", currentlyOpenTabfileUri);
					var CR = SC.createResourceGroup("workingTree", "Changes");
					if(vscode.window.activeTextEditor?.document){
						var repo = new Repository(vscode.window.activeTextEditor?.document);
					}
				}
			  });
		} 
		else {
			var message = "swagger-diff: active file not found, open a swagger spec file and try again!" ;
			vscode.window.showErrorMessage(message);
		}

		// Display a message box to the user
		vscode.window.showInformationMessage('Hello World from [ts] VSCodeSwaggerDiff!');
	});

	context.subscriptions.push(disposable);
}

// this method is called when your extension is deactivated
export function deactivate() {}
